//- Mixin for 2 button

mixin two-btn(href1, href2, button_fill,button)
  - href1 =  "" + href1 + "";
  - href2 =  "" + href2 + "";
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;")
    tr
      td.font-m.columnConnect.templateColumnContainer.text-center.text-center-mb
        +button-fill
        a.text-center-mb.btn.btn-fill(href!= href1 target="_blank")!= button_fill
      td.hide-pc.columnConnect-space.templateColumnContainer.space-btween-btn
        +spacer(16)
      td.font-m.columnConnect.templateColumnContainer.text-left.text-center-mb
        +button(props)
        a.text-center-mb.btn.btn-2-mobile(href!= href2 target="_blank")!= button
  +ie-close


//- mixin for 1 btn
mixin one-btn(href1, button)
  - href1 =  "" + href1 + "";
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;")&attributes(attributes)
    tr
      td.font-m.text-center
        +button(props)
        a.btn(href!= href1 target="_blank")!= button
  +ie-close


