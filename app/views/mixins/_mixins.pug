//- important mixin
mixin spacer(num)
  +ie-open({table:600})
  table(border="0" cellpadding="0" cellspacing="0")&attributes(attributes).line-heigh-0.no-spacing
    tbody
      tr
        td(height!=num).no-spacing.line-heigh-0
  +ie-close

mixin ie-open(props)
  - props = props || {};
  - table = props.table ? 'max-width="' + props.table + '"' : '';
  - cell = props.cell ? 'max-width="' + props.cell + '"' : '';
  |<!--[if (mso)|(IE)]>
  |<table align="center" class="preheader" cellpadding="0" cellspacing="0" role="presentation" width="600" style="width: 600px; max-width: 100%;">
  |<![endif]-->
mixin ie-close(props)
  - props = props || {};
  |<!--[if mso]></table>
  |<![endif]-->

