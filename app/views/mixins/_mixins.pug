//- Mixin for 1 IMG have TAG a and FULL WIDTH
mixin table_1img_a(src, alt, href)
  - href =  "" + href + "";
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;").global-img&attributes(attributes)
    tr
      td
        a(href!= href target="_blank")
          img(src!=src, alt!=alt).w-100.no-spacing
  +ie-close

mixin table_1img_a_center(src, alt, href)
  - href =  "" + href + "";
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;").global-img&attributes(attributes)
    tr
      td(align="center" valign="middle")
        a(href!= href target="_blank")
          img(src!=src, alt!=alt).w-100.no-spacing
  +ie-close




//- Mixin for 1 IMG FULL WIDTH - center
mixin table_1img_center(src, alt)
  +ie-open({table:600})
  table(border="0" cellpadding="0" cellspacing="0").global-img&attributes(attributes).w-100
    tr
      td(align="center" valign="middle")
        img(src!=src, alt=alt).w-100.no-spacing
  +ie-close


//- Mixin for 1 IMG Logo
mixin logo-header-pc(src, alt, href)
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;").global-img&attributes(attributes)
    tr
      td.hideOnMobile
        +table_1img_a(src, alt, href)
  +ie-close


mixin logo-header-mobile-center(src, alt, href)
  +ie-open({table:600})
  table(border="0" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%;").global-img&attributes(attributes)
    tr
      td(align="center" valign="middle").hideOnPC
        +table_1img_a_center(src, alt, href)
  +ie-close
        


