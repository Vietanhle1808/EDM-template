//- important mixin
mixin spacer(num)
  table(border="0" cellpadding="0" cellspacing="0")&attributes(attributes).line-heigh-0.no-spacing
    tbody
      tr
        td(height!=num).no-spacing.line-heigh-0

mixin ie-open(props)
  - props = props || {};
  - table = props.table ? 'max-width="' + props.table + '"' : '';
  - cell = props.cell ? 'max-width="' + props.cell + '"' : '';
  |<!--[if (mso)|(IE)]>
  |<table align="center" class="preheader" cellpadding="0" cellspacing="0" role="presentation">
  |<tr>
  |<td style="width: 600px" valign="top">
  |<![endif]-->
mixin ie-close(props)
  - props = props || {};
  |<!--[if mso]>
  |</td></tr></table>
  |<![endif]-->


//- Mixin for 1 IMG have TAG a and FULL WIDTH
mixin table_1img_a(src, alt, href)
  table(width="100%" border="0" cellspacing="0" cellpadding="0").global-img&attributes(attributes)
    tr
      td(align="center")
        a(href!=href target="_blank")
          img(src!=src, alt=alt).full-width.no-spacing

mixin table_1img_a_mobile(src, alt, href)
  table(width="100%" border="0" cellspacing="0" cellpadding="0").global-img&attributes(attributes)
    tr
      td(align="center")
        a(href!=href target="_blank")
          img(src!=src, alt=alt).full-width.no-spacing

//- Mixin for 1 IMG FULL WIDTH
mixin table_1img(src, alt)
  table(border="0" cellpadding="0" cellspacing="0").global-img&attributes(attributes).full-width
    tr
      td
        img(src!=src, alt=alt).full-width.no-spacing
